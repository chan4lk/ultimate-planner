# Database Configuration
DATABASE_URL=sqlite:///./ultimate_planner.db
# For PostgreSQL: postgresql://user:password@localhost/ultimate_planner

# JWT & Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Session Management Configuration
SESSION_EXPIRE_SECONDS=3600        # 1 hour
REMEMBER_ME_EXPIRE_SECONDS=2592000  # 30 days
MAX_SESSIONS_PER_USER=5

# OAuth Configuration (optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# Development Settings
DEBUG=true
DEVELOPMENT_MODE=true