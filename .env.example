# Database Configuration
DATABASE_URL=sqlite:///./unified_task_planner.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./unified_task_planner.db
DATABASE_ECHO=false

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost/unified_task_planner
# ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost/unified_task_planner

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Configuration - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/oauth/microsoft/callback

# OAuth Configuration - Notion
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:8000/auth/oauth/notion/callback

# OAuth Configuration - Google (future use)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/oauth/google/callback